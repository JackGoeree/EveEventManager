@page "/"
@using EveFrontend.Services
@rendermode InteractiveServer
@inject AuthService AuthService

<PageTitle>Eve: Event Manager</PageTitle>

Welcome to EVE, the Event manager.<br><br>

<MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="SignInWithMicrosoft">
    <MudIcon Icon="@Icons.Material.Filled.Login" />
    Sign in with Microsoft
</MudButton>

@code {
    private async Task SignInWithMicrosoft()
    {
        await AuthService.SignInWithMicrosoft();
    }
}